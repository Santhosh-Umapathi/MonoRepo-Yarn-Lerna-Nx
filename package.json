{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "graph": "npx nx graph",
    "build:modules": "npx lerna run build"
  },
  "devDependencies": {
    "@appymango/cli": "^1.5.2",
    "lerna": "^6.0.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/react-native",
      "**/react-native/**"
    ]
  }
}
